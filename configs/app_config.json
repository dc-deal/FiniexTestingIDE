{
    "version": "1.0",
    "description": "FiniexTestingIDE - Application Configuration",
    "development": {
        "dev_mode": false
    },
    "execution": {
        "default_parallel_scenarios": true,
        "default_max_parallel_scenarios": 20,
        "default_parallel_workers": true,
        "default_worker_parallel_threshold_ms": 1.0
    },
    "console_logging": {
        "enabled": true,
        "log_level": "INFO",
        "warn_on_parameter_override": true,
        "scenario": {
            "enabled": true,
            "log_level": "WARNING",
            "write_system_info": true
        }
    },
    "file_logging": {
        "enabled": true,
        "log_level": "DEBUG",
        "log_path": "logs/global.log",
        "append_mode": true,
        "scenario": {
            "enabled": true,
            "log_level": null,
            "log_root_path": "logs/scenario_sets"
        }
    },
    "importer": {
        "move_processed_files": true,
        "delete_on_error": false
    },
    "paths": {
        "scenario_sets": "configs/scenario_sets",
        "data_raw": "data/raw",
        "data_processed": "data/processed",
        "data_finished": "data/finished",
        "data_parquet": "data/parquet"
    },
    "monitoring": {
        "enabled": true,
        "tui_refresh_rate_ms": 300,
        "detailed_live_stats": true,
        "detailed_live_stats_threshold": 3,
        "detailed_live_stats_exports": {
            "export_portfolio_stats": false,
            "export_performance_stats": false,
            "export_current_bars": false
        }
    }
}